<div id="scholarships">
	<div id="content">
		<div class="content-section section-1" class="fullwidth">
			<div class="fixedwidth">
				<span class="title">
					Applicants
				</span>
			</div>
		</div>
		<div class="content-section section-2" class="fullwidth">
			<div class="fixedwidth" style="font-size: 24px">
				<% @join.each do |i|%>
					<% if i[:sch_id] == @scholarship.id && Applicant.where(id: i.app_id).first%>
						<% @app = Applicant.where(id: i.app_id).first %>
						<%= link_to @app.name, viewapp_scholarships_path(:id=>@app.id), method: :get%>
						<div style="width: 80%; margin: 5px auto; border-bottom: 1px solid rgba(0,0,0,0.05)"></div>
						<%= link_to 'Approve', accept_scholarships_path(:id=>@scholarship.id), method: :post%>  <%= link_to 'Deny', deny_scholarships_path(:id=>@scholarship.id), method: :post%>
						<div style="width: 90%; margin: 15px auto; border-bottom: 1px solid rgba(0,0,0,0.25)"></div>
					<%end%>
				<% end %>
			</div>
		</div>
		<div id="footer" class="fullwidth">
			<div class="fixedwidth">
				&copy; UPCSI4 Ateneo Hacks 2015
			</div>
		</div>
	</div>
</div>