<div id="accounts">
	<div id="header" class="fullwidth">
		<div class="fixedwidth">
			<span id="header-logo" class="left">
				eskolarship
			</span>
			<span id="nav-list" class="right">
				<%= link_to 'Home', root_path,
					method: :get, class: "nav-item left" %>
				<%= link_to 'Sign Up', new_applicant_path(:tag=>0),
					method: :get, class: "nav-item left" %>
				<%= link_to 'Be A Sponsor', new_sponsor_path(:tag=>1),
					method: :get, class: "nav-item left" %>
			</span>
		</div>
	</div>
	<div id="content">
		<div class="content-section section-1" class="fullwidth">
			<div class="fixedwidth">
				<span class="title">
					Login
				</span>
			</div>
		</div>
		<div class="content-section section-2" class="fullwidth">
			<div class="fixedwidth">
				<% if current_user %>
						Currently logged in as <%= current_user.username %>.
						Please logout before logging in as a different user.
				<% else %>
					<%= form_for @account, :role=>'form', :as=>:user, :url=>login_accounts_path(@account) do |f| %>
							<%= f.text_field :username %>
							<%= f.label 'Username' %>
							<%= f.password_field :password %>
							<%= f.label 'Password' %>
							<%= f.submit 'Login' %>
					<% end %>
				<% end %>
			</div>
		</div>
		<div id="footer" class="fullwidth">
			<div class="fixedwidth">
				&copy; UPCSI4 Ateneo Hacks 2015
			</div>
		</div>
	</div>
</div>